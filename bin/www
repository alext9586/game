#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('dork-api:server');
var http = require('http');
var Config = require ('../config');
var conf = new Config();

/**
 * Get port from environment and store in Express.
 */
console.info("Using config: ", conf);
//var port = normalizePort(process.env.PORT);
console.info("Setting port: ", port);
//app.set('port', port);
app.set('port', (process.env.PORT || 3000));
app.use(express.static(__dirname + '/public'));

/**
 * Create HTTP server.
 */

console.info("Server created.");
var server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */

console.info("Listening...");
app.listen(port, connectionListener);
//server.on('error', onError);
//server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

function connectionListener(error) {
  if(error) onError(error);
  else onListening();
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  //var addr = server.address();
  //var bind = typeof addr === 'string'
  //  ? 'pipe ' + addr
  //  : 'port ' + addr.port;
  var bind = app.get('port');
  console.info('Listening on ' + bind);
}
